{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.supportedFileTypes": [
    "mdx",
    "md"
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "articles",
      "pageBundle": false,
      "previewPath": null,
      "filePrefix": null,
      "fileType": "mdx",
      "template": "[[workspace]]/.frontmatter/templates/article.mdx"
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Updated date",
          "name": "updatedDate",
          "type": "datetime",
          "dateFormat": "MMMM do, Y",
          "default": "{{now}}",
          "isModifiedDate": true
        },
        {
          "title": "Hero Image",
          "type": "fields",
          "name": "heroImage",
          "fields": [
            {
              "title": "Alt",
              "name": "alt",
              "type": "string"
            },
            {
              "title": "Src",
              "name": "src",
              "type": "image"
            }
          ]
        },
        {
          "title": "Thumbnail",
          "name": "thumbnail",
          "type": "image"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "choice",
          "choices": [
            "cross-stitch",
            "interviews",
            "memories",
            "science-communication",
            "music",
            "books-and-films",
            "math-anxiety"
          ],
          "default": "memories"
        },
        {
          "title": "draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Author",
          "name": "author",
          "type": "string",
          "default": "susan-silver"
        }
      ]
    }
  ]
}